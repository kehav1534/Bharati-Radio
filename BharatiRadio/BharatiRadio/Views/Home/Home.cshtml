                <header class="form-header">
                    <h1>Events</h1>
                </header>
                <div class="video-item">
                    <div class="video-embed">
                        <iframe src="https://www.youtube.com/embed/QvgHweB1q-A?si=nwUEfYoVTjpl1RnY" title="YouTube video player" frameborder="0"></iframe>
                    </div>
                    <p>Divya Drashti | Prerna | Divine Stories</p>
                </div>
            </div>
            <div class="form-container" style="width:40%">
                <header class="form-header">
                    <h1>Bulletin</h1>
                </header>
                <div class="news-container">
                    <div class="news-items" id="newsItems">
                        @foreach (var item in Model)
                        {
                            <div class="news-item"><a href="@item.link">@item.title</a></div>

                        }
                    </div>
                </div>
                <script>
                    const newsItems = document.getElementById('newsItems');
                    let offset = 0;

                    function scrollNews() {
                        const itemHeight = newsItems.firstElementChild.offsetHeight;
                        offset += itemHeight;

                        if (offset >= newsItems.offsetHeight) {
                            offset = 0; // Reset to the top
                        }

                        newsItems.style.transform = `translateY(-${offset}px)`;
                    }

                    setInterval(scrollNews, 2000);

                </script>
            </div>
        </div>


