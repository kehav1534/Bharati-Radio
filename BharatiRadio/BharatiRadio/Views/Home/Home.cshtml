@model List<BharatiRadio.Models.Bulletin>
@{
    ViewBag.Title = "Radio Bharati";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="home-page-container">

    <div class="container1">
        <div class="slider-container">

            <div class="slides-wrapper" id="slides">
                <img src="~/Content/Images/radio1.jpeg" alt="Img 1">
                <img src="https://picsum.photos/800/400?random=2" alt="Img 2">
                <img src="https://picsum.photos/800/400?random=3" alt="Img 3">
            </div>

            <button class="nav-btn prev" onclick="moveSlide(-1)">&#10094;</button>
            <button class="nav-btn next" onclick="moveSlide(1)">&#10095;</button>

            <div class="dots-container" id="dots">
            </div>
        </div>
        <div class="bulletin-board">
            <div class="bulletin-header">
                📢 LATEST UPDATES
            </div>

            <div class="news-window">
                <div class="scroll-wrapper">
                    @foreach (var item in Model)
                    {
                        <a href="@item.link" target="_blank" class="bulletin-item">
                            <span class="date">TODAY</span>
                            @item.title
                        </a>
                    }


                </div>
            </div>
        </div>
    </div>
    <div class="container2">

        <h2 class="section-title">✨ Special Programs</h2>

        <div class="video-grid">

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Video 1"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Orientation Day</h3>
                    <p>Watch the highlights from our annual orientation program held last week.</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/LXb3EKWsInQ" title="Video 2"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Science Fair</h3>
                    <p>Students showcasing their innovative projects and experiments.</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/jfKfPfyJRdk" title="Video 3"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Sports Meet</h3>
                    <p>Catch the exciting moments from the inter-house football finals.</p>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Programs", "Home")" class="more-btn">
            More Details
        </a>
    </div>
    <div class="container2">
        <h2 class="section-title">✨ shows</h2>

        <div class="video-grid">

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="Video 1"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Orientation Day</h3>
                    <p>Watch the highlights from our annual orientation program held last week.</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/LXb3EKWsInQ" title="Video 2"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Science Fair</h3>
                    <p>Students showcasing their innovative projects and experiments.</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/jfKfPfyJRdk" title="Video 3"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Sports Meet</h3>
                    <p>Catch the exciting moments from the inter-house football finals.</p>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Shows", "Home")" class="more-btn">
            More Details
        </a>
    </div>
</div>



