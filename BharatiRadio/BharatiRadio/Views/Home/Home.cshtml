﻿@model List<BharatiRadio.Models.Bulletin>
@{
    ViewBag.Title = "Radio Bharati";
    Layout = "~/Views/Shared/__Layout.cshtml";
}

@*<link href="~/Content/styles2.css" rel="stylesheet">*@



    <div class="container1">
        <div class="slider-container">

            <div class="slides-wrapper" id="slides">
                <img src="~/Content/Images/radio1.jpeg" alt="Img 1">
                <img src="https://picsum.photos/800/400?random=2" alt="Img 2">
                <img src="https://picsum.photos/800/400?random=3" alt="Img 3">
            </div>

            <button class="nav-btn prev" onclick="moveSlide(-1)">&#10094;</button>
            <button class="nav-btn next" onclick="moveSlide(1)">&#10095;</button>

            <div class="dots-container" id="dots">
            </div>
        </div>
        <div class="bulletin-board">
            <div class="bulletin-header">
                📢 LATEST UPDATES
            </div>

            <div class="news-window">
                <div class="scroll-wrapper">
                    @foreach (var item in Model)
                    {
                        <a href="@item.link" target="_blank" class="bulletin-item">
                            <span class="date">TODAY</span>
                            @item.title
                        </a>
                    }


                </div>
            </div>
        </div>
    </div>
    <div class="container2">

        <h2 class="section-title">✨ Special Programs</h2>

        <div class="video-grid">

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/gp3ldlBobME?si=jCuDbcAIpI7rwqVs" title="Video 1"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Annual Convocation</h3>
                    <p>A proud moment for Bharati Radio ...</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/ZdrFj1yMuPE?si=ffJh0dcTwgmfoYZw" title="Video 2"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Independence Day</h3>
                    <p>Celebrating the spirit of freedom! Our students organized...</p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/AIsogkDBu0Y?si=TiCb0T4PsHLCRiFJ" title="Video 3"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Education Day</h3>
                    <p>Special Programm on Education Day featuring many writter.</p>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Programs", "Home")" class="more-btn">
            More Details
        </a>
    </div>
    <div class="container2">
        <h2 class="section-title">✨ shows</h2>

        <div class="video-grid">

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/1jzH6K1kTOQ?si=vwEB09ZRbyNv_yyV" title="Video 1"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>Akbar Birbal Stories | List of three foolish people | Ep 1</h3>
                    <p></p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/UUH94A45fOs?si=j40qp_2cLTMpT0_3" title="Video 2"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>पंचतंत्र की कहानियां | एपिसोड-1 \"गाय और शेर\"</h3>
                    <p></p>

                </div>
            </div>

            <div class="video-card">
                <div class="video-frame">
                    <iframe src="https://www.youtube.com/embed/sseZ6o8BH6U?si=5NnJWq3A9KLaavxj" title="Video 3"
                            allowfullscreen></iframe>
                </div>
                <div class="card-content">
                    <h3>दिल से दिल्ली | राष्ट्रपति भवन EP-1</h3>
                    <p></p>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Shows", "Home")" class="more-btn">
            More Details
        </a>
    </div>
   



