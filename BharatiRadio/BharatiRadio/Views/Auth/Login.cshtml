@model List<BharatiRadio.Models.Program>

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="area-body">
        
        <!-- The main login container from your CSS -->
        <div class="login-container">
            
            <!-- The left "Welcome" panel -->
            <div class="welcome-section">
                <h1>Welcome Back!</h1>
                <p>Explore our platform to discover new features, connect with others, and make the most out of your experience. Ready to continue your journey? Feel free to navigate through our site.</p>
            </div>
            
            <div class="form-section">

                <form action="#" method="POST">
                    <div class="input-group">
                        <i class="fas fa-user"></i> 
                        <input type="text" placeholder="Username" required>
                    </div>
                    
                    <!-- Password Input Group -->
                    <div class="input-group">
                        <i class="fas fa-lock"></i> 
                        <input type="password" placeholder="Password" required>
                    </div>
                    
                    <!-- Login Button -->
                    <div class="btn-field">
                        <button type="submit">Login</button>
                    </div>

                    <div class="login-links">
                        <a href="#">Forgot Password?</a>
                    </div>
                </form>
            </div>

        </div>

    </div>