<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8">
    <title>Document</title>
    <link href="~/Content/styles.css" rel="stylesheet">

    <script>
        function openMenu(){
            document.querySelector(".sidebar").style.display = "grid";
        }
        function closeMenu(){
            document.querySelector(".sidebar").style.display = "none";
        }
        window.onresize = function() {
            if (window.innerWidth>=1076){
            document.querySelector(".sidebar").style.display = "none";
        }
        };
    </script>

</head>
<body>
    <div class="sidebar">
        <button id="m-btn" onclick="closeMenu()">&times; Close</button>
        <a href="home.html" id="sidebar-element">HOME</a>
        <a href="#" id="sidebar-element">ABOUT US</a>
        <a href="#" id="sidebar-element">BULLETIN</a>
        <a href="shows.html" id="sidebar-element">SHOWS</a>
        <a href="#" id="sidebar-element">VIDEOS</a>
        <a href="#" id="sidebar-element">PODCAST</a>
        <a href="SpecailProgram_rb.html" id="sidebar-element">SPECIAL PROGRAMS</a>
        <a href="#" id="sidebar-element">CONTACT US</a>
        <a href="feedback.html" id="sidebar-element">SUGGESTION</a>
        <a href="login.html" id="sidebar-element">LOGIN</a>
    </div>
    <div class="main-container">
        <!-- Header -->
        <div class="area-head">
            <div class="area-head-col">
                <img src="~/Content/Images/bharti_radio_logo.jpg" alt="Radio Bharati Logo" id="brand-img">

            </div>
            <div class="area-head-col">
                <div class="area-head-options">
                    <a href="home.html" class="option">HOME</a>
                    <a href="#" class="option">ABOUT US</a>
                    <a href="" class="option">BULLETIN</a>
                    <a href="shows.html" class="option">SHOWS</a>
                    <a href="" class="option">VIDEOS</a>
                    <a href="" class="option">PODCAST</a>
                    <a href="SpecailProgram_rb.html" class="option">SPECIAL PROGRAMS</a>
                    <a href="" class="option">CONTACT US</a>
                    <a href="feedback.html" class="option">SUGGESTION</a>
                    <a href="login.html" class="option">LOGIN</a>
                    <div class="menu-btn">
                        <button id="m-btn" onclick="openMenu()">
                            <img width="64" height="64" src="https://img.icons8.com/sf-black/64/FA5252/menu.png" alt="menu" />
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="area-body">


            <div class="form-container">
                <header class="form-header">
                    <h1>Suggestion Form</h1>
                </header>

                <form class="suggestion-form">
                    <div class="form-row">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="Email Address">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <input type="tel" name="contact" placeholder="Contact Number">
                        </div>
                        <div class="form-group">
                            <input type="text" name="location" placeholder="Location">
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="text" name="subject" placeholder="Subject">
                    </div>

                    <div class="form-group">
                        <textarea name="suggestion" rows="5" placeholder="suggestion for shows"></textarea>
                    </div>

                    <div class="form-footer">
                        <div class="captcha">
                            <span>12 + 2 =</span>
                            <input type="text" class="captcha-input">
                        </div>
                        <button type="submit" class="submit-btn">SUBMIT</button>
                    </div>
                </form>
            </div>

        </div>

        <!-- Footer -->
        <div class="area-footer">
            <div class="footer-block">
                <h2>A-4, Paschim Vihar, Opp. Paschim Vihar (East) Metro Station, Rohtak Road, New Delhi, Delhi 110063</h2>
            </div>


        </div>

    </div>
</body>
</html>