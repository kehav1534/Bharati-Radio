@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/__Layout.cshtml";
}
@if (TempData["msg"] != null)
{
    <script>
        alert('@TempData["msg"]');
    </script>
}
<div class="page-header">
    <h1>Feedback</h1>
</div>
<form class="suggestion-form" method="post" action="@Url.Action("Feedback", "feedback")">
    <div class="form-row">
        <div class="form-group">
            <input type="text" name="name" placeholder="Name" required>
        </div>
        <div class="form-group">
            <input type="email" name="email" placeholder="Email Address" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group">
            <input type="tel" name="contact_no" placeholder="Contact Number">
        </div>
        <div class="form-group">
            <input type="text" name="location" placeholder="Location">
        </div>
    </div>

    <div class="form-group">
        <input type="text" name="subject" placeholder="Subject">
    </div>

    <div class="form-group">
        <textarea name="msg" rows="5" placeholder="suggestion for shows" required></textarea>
    </div>

    <div class="form-footer">

        <button type="submit" class="submit-btn">SUBMIT</button>
    </div>

</form>



